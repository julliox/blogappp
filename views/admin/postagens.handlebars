<h2> LISTA DE POSTAGENS: </h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Adicionas postagem</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <disv class="card-body">
            <h4><strong>Titulo: </strong>{{titulo}}</h4>
            <p><strong>Descrição: </strong>{{descricao}}</p>
            <small><strong>Data: </strong>{{data}}</small><br>
            <small><strong>Categoria: </strong>{{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-3">Editar postagem</button></a>
            <form action="/admin/postagens/deletar" method="post" >
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger mt-2">Deletar Postagem</button>
            </form>
        </disv>
    </div>
{{else}}
    <h4>Nenhuma postagem registrada!</h4>
{{/each}}